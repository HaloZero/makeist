<div id="heading"></div>
<div id="NavTabs"></div>
<script>
    window.MK = {
        COURSE : <%= @course.to_api.to_json.html_safe %>,
        USER : <%= current_user.to_api.to_json.html_safe %>,
        CSRFTOKEN : '<%= form_authenticity_token %>'
    };

    var tabs = [];
    tabs.push({
        name: 'Lessons',
        namespace : 'lessons',
        content: Lessons
    });

    React.render(Heading({ course_name: MK.COURSE.name }), document.getElementById('heading'));

    MK.Nav = React.render(NavTabs(), document.getElementById('NavTabs'));
    MK.Nav.setState({
        tabs: tabs,
        lessons: {
            lessons: MK.COURSE.lessons,
            lesson: MK.COURSE.lessons[0]
        }
    });
</script>
